<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akarui.guren.UI.Task.AddTaskActivity"

    android:paddingTop="100dp"
>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/task_adding_form"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

    >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/assigned_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        >
            <TextView
                android:id="@+id/assigned_name_label"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="fill_vertical"
                android:text="Task Title: "

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            />

            <EditText
                android:id="@+id/assigned_name_value"
                android:layout_width="215dp"
                android:layout_height="45dp"
                android:singleLine="true"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/assigned_name_label"
                app:layout_constraintEnd_toEndOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_from"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/assigned_name"
        >
            <TextView
                android:id="@+id/task_from_label"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="fill_vertical"
                android:text="From: "

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            />


            <EditText
                android:id="@+id/task_from_date_value"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/task_from_label"
                app:layout_constraintEnd_toStartOf="@+id/task_from_time_value"
            />

            <EditText
                android:id="@+id/task_from_time_value"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/task_from_date_value"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_to"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_from"
            >
            <TextView
                android:id="@+id/task_to_label"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="fill_vertical"
                android:text="To: "

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />



            <EditText
                android:id="@+id/task_to_date_value"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/task_to_label"
                app:layout_constraintEnd_toStartOf="@id/task_to_time_value"
                />

            <EditText

                android:id="@+id/task_to_time_value"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/task_to_date_value"
                app:layout_constraintEnd_toEndOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_priority"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_to"
            >
            <TextView
                android:id="@+id/task_priority_label"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="fill_vertical"
                android:text="Priority: "

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            />

            <Spinner
                android:id="@+id/task_priority_value"
                android:layout_width="200dp"
                android:layout_height="45dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/task_priority_label"
                app:layout_constraintEnd_toEndOf="parent"
            />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_priority">

            <TextView
                android:id="@+id/task_detail_label"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="fill_vertical"
                android:text="Task Details: "

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/task_detail_value"
                android:layout_width="215dp"
                android:layout_height="45dp"
                android:singleLine="true"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/task_detail_label"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_detail"
        >
            <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>